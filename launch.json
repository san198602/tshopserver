{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/index.ts", // Adjust 'dist/index.js' to your compiled output path
      "preLaunchTask": "tsc: build - tsconfig.json", // Optional: automatically build before launching
      "outFiles": ["${workspaceFolder}/src/**/*.ts"], // Point to your compiled JavaScript files
      "sourceMaps": true // Enable source map support
    }
  ]
}